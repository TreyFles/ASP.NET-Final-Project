@using Packt.Shared
@model Final_ASP.NET.Models.HomeIndexViewModel
@{
  ViewData["Title"] = "Home Page";
}
    <h4>Products</h4>

<div class="row">
  <h1 class="display-2">Product List</h2>
</div>
<div class="row">
  @foreach (Product product in @Model.Products)
  {
  <div class="card border-dark mb-3" style="width: 15rem;">
  <div class="card-header" style="text-size-adjust: 18dp; height: 4rem;"><b>@product.ProductName</b></div>
  <div class="card-body text-dark">
    <p class="card-text">Units In Stock - @product.UnitsInStock</p>
    <p>Category ID - @product.ProductID</p>
    <p>Product ID - @product.ProductID</p>
    <h9 style="float: left;"><b>@product.UnitPrice.Value.ToString("C") EA.</b></h9>
    <div style="padding-top: 25px; padding-left: 90px;">
      <a asp-controller="Home" asp-action="Cart" 
          asp-route-id="@product.ProductID"
          class="btn btn-primary">Add to Cart</a>
    </div>
  </div>
</div>
  }
</div>